<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean name="emp1" class="com.spring.demo.Employee" scope="prototype">
		<property name="empId" value="101"></property>
		<property name="name" value="ram"></property>
		<property name="add" ref="add1"></property>

	</bean>

	<bean name="add1" class="com.spring.demo.Address">
		<constructor-arg index="0" value="416202"></constructor-arg>
		<constructor-arg index="1" value="kolhapur"></constructor-arg>

	</bean>
</beans>