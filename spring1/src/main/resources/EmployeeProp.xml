<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean name="emp1" class="com.spring.collection.Employee">
		<property name="p" ref="abc"></property>
	</bean>

	<bean name="abc" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="location" value="classpath:abc.properties" />
	</bean>

</beans>        
